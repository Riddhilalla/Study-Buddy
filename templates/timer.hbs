<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Focus Timer</title>
    <link rel="stylesheet" href="timer.css">
</head>
<body>
    
    <div id="modes">
        <button data-mode-id="pomodoro" class="mode active">Focus</button>
        <button data-mode-id="short" class="mode">Short Break</button>
        <button data-mode-id="long" class="mode">Long Break</button>
    </div>
    <div id="timer">25:00</div>
    <div id="controls">
        <button onclick="startTimer()" class="timer-control start">Start</button>
        <button onclick="pauseTimer()" class="timer-control pause">Pause</button>
        <button onclick="nextMode()" class="timer-control">Skip</button>
    </div>
    <div id="duration-control">
        Work Time: <input type="number" placeholder="Enter value in minutes" class="duration" data-duration-id="pomodoro"> <br>
        Short Break: <input type="number" placeholder="Enter value in minutes" class="duration" data-duration-id="short"> <br>
        Long Break: <input type="number" placeholder="Enter value in minutes" class="duration" data-duration-id="long"> <br>
    </div>
</body>

<script src="timer.js"></script>
</html>